{
    "name": "cjuol/statguard",
    "description": "Suite de estadística avanzada para PHP: cálculos robustos (IQR, S*, MAD) vs clásicos, detección de sesgos y exportación CSV/JSON.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Cristóbal Jurado Oller",
            "email": "c.jurado.oller@gmail.com"
        }
    ],
    "keywords": [
        "statistics",
        "statguard",
        "robust-statistics",
        "outliers",
        "php",
        "data-analysis",
        "data-integrity",
        "comparative-stats",
        "csv-export"
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "markrogoyski/math-php": "^2.0",
        "phpunit/phpunit": "^10.5 || ^11.0 || ^12.0"
    },
    "autoload": {
        "psr-4": {
            "Cjuol\\StatGuard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cjuol\\StatGuard\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "test": "docker compose build web && docker compose run --rm web phpunit",
        "validate-r": "docker compose build web validator && docker compose --profile r-validation run --rm validator"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}